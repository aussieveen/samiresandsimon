<div class="checkbox">
    <input 
        type="radio" 
        class="checkbox__input" 
        name="{{ name }}" 
        value="{{ id }}"
        id="person-{{ id }}"
        {% if checked == "true" %}checked{% endif %} 
    />
    <label class="checkbox__label-container" for="person-{{ id }}">
        <span class="checkbox__label{% if uppercase == true %} checkbox__label--uppercase{% endif %}">{{ label }}</span>
    </label>
</div>
