{% layout 'components/templates/default' %}

{% assign sizes = "(min-width: 2000px) 500px, (min-width: 720px) 25vw, 180px" %}
{% assign widths = "180,360,540,720,1000,1500" %}

{% assign sizes = "210px" %}
{% assign widths = "210,420,630,840" %}

{% block content %}
<div class="overview" data-module="check-saved" data-id="{{ invite['Invite Code'] }}">
  {% render "components/organisms/invite-header",
          invite: invite,
          languages: languages,
          page: page
  %}

  {% render "components/atoms/section-break" %}

  <!-- WHERE & WHEN -->
  <div class="overview__section">
    <div class="overview__section-image">
      {% render "components/atoms/image-bordered",
          url: "./src/assets/images/porterhouse.jpeg",
          alt: "",
          sizes: sizes,
          widths: widths
      %}
    </div>
    <div class="overview__section-title">
      <h2 class="heading-2">
        {{ languages[page.lang].components.templates.invite.whereandwhen }}
      </h2>
    </div>
    <div class="overview__section-content">
      {% render "components/organisms/where-and-when",
          inviteType: invite['Invite Type'],
          languages: languages,
          page: page
      %}
    </div>
  </div>

  {% render "components/atoms/section-break" %}

  <!-- ORDER OF THE DAY -->
  <div class="overview__section">
    <div class="overview__section-title">
      <h2 class="heading-2">
        {{ languages[page.lang].components.templates.invite.orderofevents }}
      </h2>
    </div>
    <div class="overview__section-content">
      {% render "components/organisms/order-of-the-day",
              inviteType: invite['Invite Type'],
              languages: languages,
              page: page
      %}
    </div>
  </div>

  {% render "components/atoms/section-break" %}

  <!-- OUR STORY -->
  <div class="overview__section">
    <div class="overview__section-image">
      {% render "components/atoms/image-bordered",
        url: "./src/assets/images/brazilwaterfalll.jpeg",
        alt: "prewedding",
        sizes: sizes,
        widths: widths 
      %}
    </div>
    <div class="overview__section-title">
      <h2 class="heading-2">
        {{ languages[page.lang].components.templates.invite.ourstory }}
      </h2>
    </div>
    <div class="overview__section-content">
      {% render "components/organisms/our-story",
              languages: languages,
              page: page
      %}
    </div>
  </div>

  {% render "components/atoms/section-break" %}

  <!-- TRANSPORT & ACCOMODATION -->
  <div class="overview__section">
    <div class="overview__section-image">
      {% render "components/atoms/image-bordered",
              url: "./src/assets/images/londonbus.png",
              alt: "prewedding",
              sizes: sizes,
              widths: widths
      %}
    </div>
    <div class="overview__section-title">
      <h2 class="heading-2">{{ languages[page.lang].components.templates.invite.transportandaccommodation }} </h2>
    </div>
    <div class="overview__section-content">
      {% render "components/organisms/transport",
              invite: invite,
              languages: languages,
              page: page
      %}
    </div>
  </div>

  {% render "components/atoms/section-break" %}

  <!-- GIFTING -->
  <div class="overview__section">
    <div class="overview__section-image">
      {% render "components/atoms/image-bordered",
              url: "./src/assets/images/broncos.png",
              alt: "prewedding",
              sizes: sizes,
              widths: widths
      %}
    </div>
    <div class="overview__section-title">
      <h2 class="heading-2">
        {{ languages[page.lang].components.templates.invite.gifting }}
      </h2>
    </div>
    <div class="overview__section-content">
      {% render "components/organisms/gifting",
              languages: languages,
              page: page
      %}
    </div>
  </div>

  {% render "components/atoms/section-break" %}

  <!-- FAQ -->
  <div class="overview__section">
    <div class="overview__section-title">
      <h2 class="heading-2">
        {{ languages[page.lang].components.templates.invite.faqs }}
      </h2>
    </div>
    <div class="overview__section-content">
      {% render "components/organisms/faq",
              invite: invite,
              languages: languages,
              page: page
      %}
    </div>
  </div>

</div>
{% endblock %}
